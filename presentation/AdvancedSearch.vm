<html>
    <head>
            <title>Martus Amplifier Date Search</title>
            <link rel="stylesheet" href="../stylesheets/style.css" type="text/css">
    </head>
    
    <body>
#include ("header.vm")
		#set ($years = [1900..2004])
        #set ($months = [1..12])
        #set ($days = [1..31])
            
        <center>
            <table border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td> 
                    <form name="search" action="SearchResults" method="post">
                        <p>
                            The 
                         <select name="field">
						    #foreach ($field in $searchableDateFields)
                                <option value="$velocityCount">
                                    $field
                                </option>
						    #end
                        </select>     
                            is 
			</p>		
			<p> &nbsp;&nbsp;&nbsp;&nbsp;between 
                    <select name="startMonth">                    	
					    #foreach ($month in $months)
                            <option value="$month">
                                $month
                            </option>
					    #end
                    </select>

                    <select name="startDay">                    	
					    #foreach ($day in $days)
                            <option value="$day">
                                $day
                            </option>
					    #end
                    </select>    
                      
                    <select name="startYear">                    	
					    #foreach ($year in $years)
                            <option value="$year">
                                $year
                            </option>
					    #end
                    </select>                                               
                        			                                                                            </p>				
                <p> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and 
                        &nbsp;&nbsp;&nbsp&nbsp;&nbsp
                   <select name="endMonth">                    	
					    #foreach ($month in $months)
                            <option value="$month">
                                $month
                            </option>
					    #end
                    </select>

                    <select name="endDay">                    	
					    #foreach ($day in $days)
                            <option value="$day">
                                $day
                            </option>
					    #end
                    </select>    
                      
                    <select name="endYear">                    	
					    #foreach ($year in $years)
                            <option value="$year">
                                $year
                            </option>
					    #end
                    </select>                              
                                                   
                    <input type="submit" value="Search"/>
                        </p><p>&nbsp;</p>	
                     <p></p>
                   </form>
                   
                  </td>
                </tr>
                <tr>
                    <td align="right">
                            <a href="servlet/SimpleSearch">Basic search</a>
                    </td>
                </tr>
            </table>
        </center>
#include ("footer.vm")
    </body>
</html>

