<html>
    <head>
   		#parse("Meta.vm")
        <title>Martus Amplifier Search Query</title>
    </head>
    
    <body>
    	#set ($pageTitle="Quick Search")
    	#set ($pageInfo="")
		#set ($noSearchForm = "1")
		#parse ("ResultHeader.vm")
		<br/>
		$testValue
		<center>
			<table>
				<tr>
					<td align='center' width='500'>
						<font size='+1'>
							<strong>Welcome to the Martus Search Engine</strong>
						</font>
						<br/><br/>
						This Quick Search page allows you to enter a list of 
						words, and see all the bulletins that contain all 
						of those words. For other search options, try the 
						Advanced Search.
					</td>
				</tr>
				<tr>
					<td align='center'>
						<br/><br/>
						Enter your search here:
						#parse ("MiniSearchForm.vm")
					</td>
				</tr>
			</table>
        </center>
		<br/>
        #set ($noSearchForm = "1")
        #parse ("ResultFooter.vm")
    </body>
</html>
